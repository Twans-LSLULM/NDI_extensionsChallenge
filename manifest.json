{
    "manifest_version": 3,
    "name": "Extension SenSaaSionnel",
    "description": "La meilleure extension de la Nuit de l'Info 2025 !",
    "version": "1.0.0",

    "icons": {
        "16": "src/assets/logo-16.png",
        "48": "src/assets/logo-48.png",
        "128": "src/assets/logo-128.png"
    },

    "action": {
        "default_popup": "src/HTML/popup.html",
        "default_title": "Extension SenSaaSionnel"
    },

    "background": {
        "service_worker": "src/background/service-worker.js",
        "type": "module"
    },

    "permissions": [],
    "host_permissions": [],

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["src/content/content-script.js"],
            "run_at": "document_idle"
        }
    ]
}
